{
  "dashboard": {
    "title": "API Gateway Observability",
    "tags": ["gateway", "api", "observability"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(gateway_requests_total[1m])",
            "legendFormat": "{{method}} {{path}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Request Latency (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(gateway_request_duration_seconds_bucket[1m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(gateway_request_duration_seconds_bucket[1m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(gateway_request_duration_seconds_bucket[1m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(gateway_requests_errors_total[1m])",
            "legendFormat": "{{method}} {{path}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Success Rate (%)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "100 * (1 - (rate(gateway_requests_errors_total[1m]) / rate(gateway_requests_total[1m])))",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Success %", "min": 0, "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Backend Health Status",
        "type": "stat",
        "gridPos": {"x": 0, "y": 16, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "gateway_backend_healthy",
            "legendFormat": "{{backend}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Circuit Breaker State",
        "type": "stat",
        "gridPos": {"x": 8, "y": 16, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "gateway_circuit_breaker_state",
            "legendFormat": "{{backend}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "Closed", "color": "green"}}},
              {"type": "value", "options": {"1": {"text": "Open", "color": "red"}}},
              {"type": "value", "options": {"2": {"text": "Half-Open", "color": "yellow"}}}
            ]
          }
        }
      },
      {
        "id": 7,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": {"x": 16, "y": 16, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "gateway_active_connections",
            "legendFormat": "{{backend}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Backend Request Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(gateway_backend_requests_total[1m])",
            "legendFormat": "{{backend}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Backend Latency",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(gateway_backend_duration_seconds_bucket[1m]))",
            "legendFormat": "{{backend}} p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Authentication Success Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(gateway_auth_attempts_total[1m])",
            "legendFormat": "{{method}} - Attempts",
            "refId": "A"
          },
          {
            "expr": "rate(gateway_auth_failures_total[1m])",
            "legendFormat": "{{method}} - Failures",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Attempts/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Rate Limit Rejections",
        "type": "graph",
        "gridPos": {"x": 12, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(gateway_rate_limit_exceeded_total[1m])",
            "legendFormat": "{{route}} - {{identifier}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Rejections/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "title": "Circuit Breaker Transitions",
        "type": "graph",
        "gridPos": {"x": 0, "y": 36, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "rate(gateway_circuit_breaker_transitions_total[1m])",
            "legendFormat": "{{backend}}: {{from}} â†’ {{to}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Transitions/sec"},
          {"format": "short"}
        ]
      }
    ]
  }
}
